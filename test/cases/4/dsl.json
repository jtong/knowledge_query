{
    "originalDSL": {
        "action": "GET",
        "target": "knowledge_item",
        "conditions": [
            {
                "field": "type",
                "operator": "=",
                "value": "course"
            },
            {
                "field": "content_path",
                "operator": "=",
                "value": "default.txt",
                "express": "${filename}"
            },
            {
                "field": "year",
                "operator": "=",
                "value": 2000,
                "express": "${year}"
            },
            {
                "field": "is_active",
                "operator": "=",
                "value": true,
                "express": "${active}"
            }
        ]
    },
    "updates": {
        "filename": "sample_content.txt",
        "year": 2023,
        "active": false
    }
}